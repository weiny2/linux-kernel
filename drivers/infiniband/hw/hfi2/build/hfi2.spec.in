%if 0%{?require_kver:1}
%define kver %{require_kver}
%else
%define kver %(uname -r)
%endif

%if 0%{?have_kdir:1}
%define kdir %{have_kdir}
%define mtarget "driver"
%else
%define kdir /lib/modules/%{kver}/build
%define mtarget "driver-ifs"
BuildRequires: kernel-devel = %(echo %{kver}|sed -e 's/-/_/g')
%endif

%define rdma_path "$(pwd)/rdmavt"

%if 0%{!?build_src_rpm:1}
%define relext _%(echo %{kver}|sed -e 's/-/_/g')
%endif

Name: @NAME@
Version: @VERSION@
Release: @RELEASE@
Source: %{name}-%{version}.tgz

Summary: Intel Omni-Path HFI2 driver
License: GPLv2 or BSD
Group: System Environment/Base
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
Url: http://www.intel.com
%define arch %(uname -p)
Requires: kernel = %(echo %{kver} | sed -e 's/\(.*\)\.%{arch}/\1/g' | sed -e 's/-/_/g')

%description
hfi2 provides the driver for Intel Omni-Path HFI 2nd generation cards

%prep
%setup -q

%build
make %{?_smp_mflags} VERSION=%version KVER=%kver KBUILD=%kdir RELEASE=%release RDMA_PATH=%rdma_path %mtarget

%install
make VERSION=%version KVER=%kver RELEASE=%release DESTDIR=${RPM_BUILD_ROOT} install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
/lib/modules/*
/usr/lib/udev/rules.d/80-hfi2.rules
/etc/init.d/%{name}

%post
depmod -a %{kver}
systemctl daemon-reload

